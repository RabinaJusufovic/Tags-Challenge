              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home <span class="sr-only"></span></a>
                </li>
              </ul>
              <form class="form-inline my-2 my-lg-0">
                <a href="/auth/logout"><button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="float: right !important;" onclick="window.open('/auth/logout')">Log out</button></a>
              </form>
